{
    "name": "gta-derzhava-launcher",
    "description": "GTA Derzhava Launcher",
    "version": "1.0.0",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "build": "electron-builder"
    },
    "author": "N3wSk1Y",
    "license": "MIT",
    "devDependencies": {
        "@electron-forge/cli": "^6.1.1",
        "@electron-forge/maker-deb": "^6.1.1",
        "@electron-forge/maker-rpm": "^6.1.1",
        "@electron-forge/maker-squirrel": "^6.1.1",
        "@electron-forge/maker-zip": "^6.1.1",
        "@types/decompress": "^4.2.4",
        "@types/ftps": "^1.2.0",
        "@types/got": "^9.6.12",
        "@types/request": "^2.48.8",
        "electron": "^24.3.0"
    },
    "dependencies": {
        "decompress": "^4.2.1",
        "decompress-unzip": "^4.0.1",
        "electron-squirrel-startup": "^1.0.0",
        "path": "^0.12.7",
        "request": "^2.88.2"
    },
    "build": {
        "appId": "com.gtaderzhavalauncher.app",
        "asar": true,
        "files": [
            "dist/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "icon": "src/public/icon.ico",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "installerIcon": "src/public/icon.ico",
            "uninstallerIcon": "src/public/icon.ico",
            "license": "./LICENSE",
            "uninstallDisplayName": "GTA Derzhava",
            "allowToChangeInstallationDirectory": true
        }
    }
}
